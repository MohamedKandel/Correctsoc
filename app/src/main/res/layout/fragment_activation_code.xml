        <TextView
            android:id="@+id/txtView_activation_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_23sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/activation_code"
            android:textColor="@color/alphaWhite"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_device_number"
            style="@style/AuthInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            app:endIconMode="clear_text"
            app:layout_constraintTop_toBottomOf="@id/txtView_activation_code">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_activation_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="name"
                android:digits="ZXCVBNMASDFGHJKLQWERTYUIOP1234567890-"
                android:fontFamily="@font/roboto_bold"
                android:hint="@string/activation_code"
                android:inputType="text"
                android:maxLength="36"
                android:maxLines="1"
                android:minLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/alphaWhite"
                android:textColorHint="@color/alphaWhite" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_43sdp"
            android:backgroundTint="@color/white"
            app:cornerRadius="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_36sdp"
            android:layout_marginEnd="@dimen/_36sdp"
            android:text="@string/done"
            android:textColor="@color/dark_purple"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_15ssp"
            android:paddingTop="@dimen/_12sdp"
            android:id="@+id/btn_done"
            android:paddingBottom="@dimen/_12sdp"/>
