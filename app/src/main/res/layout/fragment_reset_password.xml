<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_bg"
    tools:context=".ui.auth.ResetPasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/welcome_back"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/arrow_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_19sdp"
        android:layout_marginEnd="@dimen/_19sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/barlow_semi_condensed_semibold"
            android:text="@string/reset_password"
            android:textColor="@color/white"
            android:textSize="@dimen/_25ssp" />

        <TextView
            android:id="@+id/txt_reset_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_reset"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/request_new_password"
            android:textColor="@color/alphaWhite"
            android:textSize="@dimen/_12ssp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_password"
            style="@style/AuthInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_reset_msg"
            android:layout_marginTop="@dimen/_18sdp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="password"
                android:drawableStart="@drawable/lock_icon"
                android:drawablePadding="@dimen/_7sdp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textColorHint="@color/alphaWhite" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_confirm_password"
            style="@style/AuthInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_password"
            android:layout_marginTop="@dimen/_18sdp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="password"
                android:drawableStart="@drawable/lock_icon"
                android:drawablePadding="@dimen/_7sdp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textColorHint="@color/alphaWhite" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/strength_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_confirm_password"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/view1"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                app:cardBackgroundColor="@color/alphaWhite"
                app:cardCornerRadius="@dimen/_6sdp"
                app:contentPadding="@dimen/_2sdp"
                app:strokeWidth="0dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/view2"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                app:cardBackgroundColor="@color/alphaWhite"
                app:cardCornerRadius="@dimen/_6sdp"
                app:strokeWidth="0dp"
                app:contentPadding="@dimen/_2sdp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/view3"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                app:cardBackgroundColor="@color/alphaWhite"
                app:cardCornerRadius="@dimen/_6sdp"
                app:strokeWidth="0dp"
                app:contentPadding="@dimen/_2sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_password_requirements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/strength_layout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/instruction_title_normal"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <RelativeLayout
            android:id="@+id/layout_6_chars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_password_requirements"
            android:layoutDirection="locale"
            android:textDirection="locale">

            <ImageView
                android:id="@+id/icon_6_check"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:contentDescription="@string/verify"
                android:src="@drawable/check_circle_icon"
                app:tint="#B5999999" />

            <TextView
                android:id="@+id/txt_instruction_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_toEndOf="@id/icon_6_check"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/instruction_1"
                android:textColor="@color/alphaWhite"
                android:textSize="@dimen/_12ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_1_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_6_chars"
            android:layoutDirection="locale"
            android:textDirection="locale">

            <ImageView
                android:id="@+id/icon_1_number"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:contentDescription="@string/verify"
                android:src="@drawable/check_circle_icon"
                app:tint="#B5999999" />

            <TextView
                android:id="@+id/txt_instruction_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_toEndOf="@id/icon_1_number"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/instruction_2"
                android:textColor="@color/alphaWhite"
                android:textSize="@dimen/_12ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_1_upper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_1_number"
            android:layoutDirection="locale"
            android:textDirection="locale">

            <ImageView
                android:id="@+id/icon_1_upper"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:contentDescription="@string/verify"
                android:src="@drawable/check_circle_icon"
                app:tint="#B5999999" />

            <TextView
                android:id="@+id/txt_instruction_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_toEndOf="@id/icon_1_upper"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/instruction_3"
                android:textColor="@color/alphaWhite"
                android:textSize="@dimen/_12ssp" />
        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:paddingTop="@dimen/_9sdp"
        android:paddingBottom="@dimen/_9sdp"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/_15ssp"
        app:cornerRadius="@dimen/_15sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>