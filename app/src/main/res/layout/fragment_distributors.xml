    <TextView
        android:id="@+id/txtView_activation_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_19sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/activation_code"
        android:textColor="@color/alphaWhite"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_activation_code"
        style="@style/AuthInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/txtView_activation_code">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_activation_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="name"
            android:digits="ZXCVBNMASDFGHJKLQWERTYUIOP1234567890-"
            android:fontFamily="@font/roboto_bold"
            android:hint="@string/activation_code"
            android:inputType="text"
            android:maxLength="36"
            android:maxLines="1"
            android:minLines="1"
            android:scrollHorizontally="true"
            android:textColor="@color/alphaWhite"
            android:textColorHint="@color/alphaWhite" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/radius_card_drawable"
        android:id="@+id/contacts_recyclerView"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_13sdp"
        app:layout_constraintTop_toBottomOf="@id/layout_activation_code"
        tools:listitem="@layout/contacts_list_item"/>

